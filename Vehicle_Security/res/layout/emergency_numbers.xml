<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyNumbers" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4" >

        <RelativeLayout
            android:id="@+id/police"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/imageView2"
                android:text="131 444"
                android:textColor="@color/light_black"
                android:textSize="@dimen/big_text" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_police_assistance" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView1"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/imageView1"
                android:text="Police Assistance"
                android:textSize="@dimen/big_text" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_alignTop="@+id/textView2"
                android:layout_marginTop="5dp"
                android:src="@drawable/phone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/gry" >
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/raa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView1"
                android:layout_marginLeft="17sp"
                android:layout_toRightOf="@+id/imageView1"
                android:text="RAA Roadside Service"
                android:textSize="@dimen/big_text" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/imageView2"
                android:text="13 11 11"
                android:textColor="@color/light_black"
                android:textSize="@dimen/big_text" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_raa" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_alignTop="@+id/textView2"
                android:layout_marginTop="5dp"
                android:src="@drawable/phone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/gry" >
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView1"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@+id/imageView1"
                android:text="Tow Truck (metro area)"
                android:textSize="@dimen/big_text" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/imageView2"
                android:text="8231 5555"
                android:textColor="@color/light_black"
                android:textSize="@dimen/big_text" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_tow_truck" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_alignTop="@+id/textView2"
                android:layout_marginTop="5dp"
                android:src="@drawable/phone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/gry" >
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView1"
                android:layout_marginLeft="17sp"
                android:layout_toRightOf="@+id/imageView1"
                android:text="Suburban Taxis (metro area)"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/imageView2"
                android:text="131 008"
                android:textColor="@color/light_black"
                android:textSize="@dimen/medium_text" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_suburban_taxi" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_alignTop="@+id/textView2"
                android:layout_marginTop="5dp"
                android:src="@drawable/phone" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>